block config
  - var current = 'main'
  - var pageTitle = 'Jade, Stylus, ES6 & Webpack.'

html
  head
    meta(charset="UTF-8")
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    
    title= pageTitle

    link(rel="stylesheet", href="./css/#{current}.css")

  body

    include nav

    block header
      // page header will come here.

    block main
      // page content will come here.

    include footer

    script(src='vendor.bundle.js')
    script(src='./js/#{current}.js')
    