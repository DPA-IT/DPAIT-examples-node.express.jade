extends partials/layout

append config
  - var current = 'form'

block main 

  section#portfolio
    .container
      .row
        .col-lg-12.text-center
          h2 Portfolio
          hr.star-primary

      .row
          .col-lg-12.text-center

            form(class='form-horizontal',action='/login',method='POST',id='loginForm')
              fieldset
                div.control-group
                  label(for='firstname',class='control-label') Username
                  div.controls
                    input(type='text',id='firstname',class='input-xlarge',data-bind='text:firstname')

                div.control-group
                  label(for='lastname',class='control-label') Lastname
                  div.controls
                    input(type='text',id='lastname',class='input-xlarge',data-bind='text:lastname')

                div.contol-group(id='dpa-container')

                div.control-group
                  div.controls
                    input(type='button',id='submit',class='btn-primary',value='Submit')
